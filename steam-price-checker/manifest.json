{
  "manifest_version": 2,
  "name": "Steam Region Prices",
  "version": "1.0",
  "description": "Показывает цены на игру в разных регионах Steam.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://localhost:8000/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/app/*"],
      "js": ["content.js"]
    }
  ]
}